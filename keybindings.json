// Place your key bindings in this file to override the defaultsauto[]
[
    // VIM 
    {
        "key": "tab",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus && !editorReadonly && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+tab",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus && !editorReadonly && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "tab",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus && !editorReadonly && !inDebugRepl && vim.mode == 'Visual'"
    },
    {
        "key": "shift+tab",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus && !editorReadonly && !inDebugRepl && vim.mode == 'Visual'"
    },
    {
        "key": "tab",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus && !editorReadonly && !inDebugRepl && (vim.mode == 'Normal' || vim.mode == 'Visual' || vim.mode == 'VisualLine' || vim.mode == 'VisualBlock')"
    },
    {
        "key": "shift+tab",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus && !editorReadonly && !inDebugRepl && (vim.mode == 'Normal' || vim.mode == 'Visual' || vim.mode == 'VisualLine' || vim.mode == 'VisualBlock')"
    },
    {
        "key": "shift+space",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Normal'"
    },
    {
        "key": "shift+enter",
        "command": "type",
        "args": {"text": "\n"},
        "when": "editorTextFocus && vim.active && !inDebugRep l&& vim.mode == 'Normal'"
    },
    // EXPLOERER
    {
        "key": "ctrl+n",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "ctrl+shift+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "ctrl+'",
        "command": "csdevkit.addNewFile",
        "args": ["solutionExplorer"]
    },
    {
        "key": "ctrl+shift+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    // GENERAL
    {
        "key": "ctrl+e",
        "command": "workbench.action.focusFirstEditorGroup"
    },
    {
        "key": "ctrl+e",
        "command": "workbench.action.focusNextGroup",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+o",
        "command": "workbench.view.explorer"
    },
    {
        "key": "ctrl+t",
        "command": "terminal.focus"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.view.scm"
    },
    {
        "key": "ctrl+d",
        "command": "workbench.view.debug"
    },
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+j",
        "command": "multiCommand.pageDownAndCenter",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+k",
        "command": "multiCommand.pageUpAndCenter",
        "when": "editorTextFocus"
    }
]
